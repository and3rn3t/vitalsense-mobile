// Debug configuration for VitalSense
// Includes Base.xcconfig settings plus debug optimizations

#include "Base.xcconfig"

// MARK: - Debug Build Settings
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
ENABLE_TESTABILITY = YES
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) DEBUG
SWIFT_OPTIMIZATION_LEVEL = -Onone
GCC_OPTIMIZATION_LEVEL = 0

// MARK: - Swift Compiler - Code Generation
SWIFT_COMPILATION_MODE = singlefile

// MARK: - Debugging
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) DEBUG=1
ENABLE_NS_ASSERTIONS = YES
ENABLE_STRICT_OBJC_MSGSEND = YES

// MARK: - Code Signing
CODE_SIGN_IDENTITY = Apple Development

// MARK: - Deployment
COPY_PHASE_STRIP = NO
STRIP_INSTALLED_PRODUCT = NO
SEPARATE_STRIP = NO

// MARK: - Health App Debug Features
OTHER_SWIFT_FLAGS = $(inherited) -DDEBUG -DHEALTHKIT_DEBUG -DGAIT_ANALYSIS_DEBUG

// MARK: - Performance Debugging
CLANG_ENABLE_CODE_COVERAGE = YES
GCC_GENERATE_DEBUGGING_SYMBOLS = YES

// MARK: - Memory Debugging
ENABLE_ADDRESS_SANITIZER = NO
ENABLE_THREAD_SANITIZER = NO
ENABLE_UNDEFINED_BEHAVIOR_SANITIZER = NO

// MARK: - Build Speed Optimizations for Development
SWIFT_DISABLE_SAFETY_CHECKS = NO
SWIFT_ENFORCE_EXCLUSIVE_ACCESS = on

// MARK: - Simulator Specific
ONLY_ACTIVE_ARCH = YES