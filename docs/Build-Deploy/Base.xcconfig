// Base configuration for VitalSense health monitoring app
// Optimized for iOS 16.0+ and watchOS 9.0+ with HealthKit integration

// MARK: - Build Information
PRODUCT_NAME = VitalSense
PRODUCT_BUNDLE_IDENTIFIER = dev.andernet.VitalSense

// MARK: - Development Team & Code Signing
DEVELOPMENT_TEAM = C8U3P6AJ6L
CODE_SIGN_STYLE = Automatic

// MARK: - Deployment Targets
IPHONEOS_DEPLOYMENT_TARGET = 16.0
WATCHOS_DEPLOYMENT_TARGET = 9.0
MACOSX_DEPLOYMENT_TARGET = 13.0
TVOS_DEPLOYMENT_TARGET = 16.0

// MARK: - Swift Configuration
SWIFT_VERSION = 5.9
SWIFT_STRICT_CONCURRENCY = complete
SWIFT_UPCOMING_FEATURE_BARE_SLASH_REGEX = YES
SWIFT_UPCOMING_FEATURE_CONCISE_MAGIC_FILE = YES
SWIFT_UPCOMING_FEATURE_EXISTENTIAL_ANY = YES
SWIFT_UPCOMING_FEATURE_FORWARD_TRAILING_CLOSURES = YES
SWIFT_UPCOMING_FEATURE_IMPLICIT_OPEN_EXISTENTIALS = YES

// MARK: - Health App Optimizations
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) HEALTHKIT_ENABLED=1 COREDATA_ENABLED=1 CORE_MOTION_ENABLED=1

// MARK: - Build Performance
ENABLE_PREVIEWS = YES
SWIFT_EMIT_LOC_STRINGS = YES
ENABLE_USER_SCRIPT_SANDBOXING = NO

// MARK: - Security & Privacy
ENABLE_HARDENED_RUNTIME = YES
ENABLE_APP_SANDBOX = NO

// MARK: - Architecture Support
ARCHS = $(ARCHS_STANDARD)
VALID_ARCHS = arm64 x86_64

// MARK: - Framework Search Paths
FRAMEWORK_SEARCH_PATHS = $(inherited) $(PLATFORM_DIR)/Developer/Library/Frameworks

// MARK: - Linking
OTHER_LDFLAGS = $(inherited) -framework HealthKit -framework CoreMotion -framework WatchConnectivity -framework UserNotifications -framework BackgroundTasks

// MARK: - Asset Catalogs
ASSETCATALOG_COMPILER_APPICON_NAME = AppIcon
ASSETCATALOG_COMPILER_GLOBAL_ACCENT_COLOR_NAME = AccentColor

// MARK: - Module Configuration
DEFINES_MODULE = YES
MODULEMAP_FILE = 
SWIFT_OBJC_BRIDGING_HEADER = 

// MARK: - Localization
DEVELOPMENT_LANGUAGE = en
LOCALIZATION_PREFERS_STRING_CATALOGS = YES

// MARK: - App Extensions
APPLICATION_EXTENSION_API_ONLY = NO

// MARK: - Build Settings for Health Data Processing
GCC_C_LANGUAGE_STANDARD = c17
GCC_NO_COMMON_BLOCKS = YES
GCC_WARN_64_TO_32_BIT_CONVERSION = YES
GCC_WARN_ABOUT_RETURN_TYPE = YES_ERROR
GCC_WARN_UNDECLARED_SELECTOR = YES
GCC_WARN_UNINITIALIZED_AUTOS = YES_AGGRESSIVE
GCC_WARN_UNUSED_FUNCTION = YES
GCC_WARN_UNUSED_VARIABLE = YES